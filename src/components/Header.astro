---
import ThemeToggle from "./ThemeToggle.astro"
---

<header>
  <div class="flex justify-between items-center">
    <img src="/favicon.svg" class="logo-before" id="logo" />
    <ThemeToggle />
  </div>
  <div class="flex items-center mt-4">
    <span
      class="text-2xl text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-yellow-300 to-red-700 mr-1"
      >ChatGPT</span
    >
    <span class="ml-1 text-2xl font-extrabold text-slate-7 dark:text-slate"
      >Vercel</span
    >
  </div>
</header>

<style is:inline>
  .logo {
    width: 100px;
    margin-top: 0px;
    transition: all 1s ease-in-out;
  }

  .logo-before {
    width: 200px;
    margin-top: 200px;
  }
</style>
